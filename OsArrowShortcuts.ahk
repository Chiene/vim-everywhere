; Arrow keys

j::
	Send, {Down}
	Return

k::
	Send, {Up}
	Return

h::
	Send, {Left}
	Return

l::
	Send, {Right}
	Return

; Alt + arrow

!h::
	Send, {Alt down}{Left}
	Return 

!l::
	Send, {Alt down}{Right}
	Return 

!j::
	Send, {Alt down}{Down}
	Return 

!k::
	Send, {Alt down}{Up}
	Return

; Win + Arrow

#h::
	Send, {LWin down}{Left}{LWin up}
	Return

#l::
	Send, {LWin down}{Right}{LWin up}
	Return

#j::
	Send, {LWin down}{Down}{LWin up}
	Return

#k::
	Send, {LWin down}{Up}{LWin up}
	Return

; Shift + Arrow

+h::
	Send, {Shift down}{Left}
	Return 

+l::
	Send, {Shift down}{Right}
	Return 

+j::
	Send, {Shift down}{Down}
	Return 

+k::
	Send, {Shift down}{Up}
	Return

; Ctrl + Arrow

^h::
	Send, {Ctrl down}{Left}{Ctrl up}
	Return

^l::
	Send, {Ctrl down}{Right}{Ctrl up}
	Return

^j::
	Send, {Ctrl down}{Down}{Ctrl up}
	Return

^k::
	Send, {Ctrl down}{Up}{Ctrl up}
	Return

; Ctrl + Win + Arrow

^#l::
	Send, {Ctrl down}{LWin down}{Right}{LWin up}{Ctrl up}
	Return

^#h::
	Send, {Ctrl down}{LWin down}{Left}{LWin up}{Ctrl up}
	Return

^#j::
	Send, {Ctrl down}{LWin down}{Down}{LWin up}{Ctrl up}
	Return

^#k::
	Send, {Ctrl down}{LWin down}{Up}{LWin up}{Ctrl up}
	Return

; Ctrl + Shift + Arrow

^+h::
	Send, {Ctrl down}{Shift down}{Left}
	Return

^+l::
	Send, {Ctrl down}{Shift down}{Right}
	Return

^+j::
	Send, {Ctrl down}{Shift down}{Down}
	Return

^+k::
	Send, {Ctrl down}{Shift down}{Up}
	Return
